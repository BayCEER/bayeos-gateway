	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.4.2.RELEASE</version>
		<relativePath />
	</parent>



	<profiles>
		<profile>
			<id>prod</id>
			<properties>
				<db.url>jdbc:postgresql://localhost/xbee</db.url>
				<skipTests>true</skipTests>
				<log.level>INFO</log.level>
				<log.path>/var/log/bayeos-gateway.log</log.path>
			</properties>
			<build>
				<plugins>
					<plugin>
						<artifactId>jdeb</artifactId>
						<groupId>org.vafer</groupId>
						<version>1.5</version>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>jdeb</goal>
								</goals>
								<configuration>
									<deb>${project.build.directory}/bayeos-gateway-${project.version}+${release}.deb</deb>
									<verbose>false</verbose>
									<dataSet>
										<data>
											<src>${project.build.directory}/deb/data</src>
											<type>directory</type>
										</data>
										<data>
											<src>${project.build.directory}/${project.build.finalName}.jar</src>
											<dst>/var/lib/bayeos-gateway/bayeos-gateway.jar</dst>
											<type>file</type>
										</data>
									</dataSet>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>


		<profile>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<id>dev</id>
			<properties>
				<log.level>INFO</log.level>
				<log.path>bayeos-gateway.log</log.path>
				<db.url>jdbc:postgresql://db/xbee</db.url>
			</properties>
		</profile>


		<profile>
			<id>test</id>
			<properties>
				<docker.hostname>docker</docker.hostname>
				<docker.host>https://${docker.hostname}:2376</docker.host>
				<db.url>jdbc:postgresql://db/xbee</db.url>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>2.10</version>
						<configuration>
							<skip>true</skip>
						</configuration>
					</plugin>

					<plugin>
						<artifactId>maven-failsafe-plugin</artifactId>
						<version>2.17</version>
						<executions>
							<execution>
								<id>integration-test</id>
								<goals>
									<goal>integration-test</goal>
								</goals>
							</execution>
							<execution>
								<id>verify</id>
								<goals>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<systemPropertyVariables>
								<server.url>http://${docker.hostname}:${server.port}${server.contextPath}</server.url>
								<server.user>root</server.user>
								<server.password>bayeos</server.password>
							</systemPropertyVariables>
						</configuration>
					</plugin>
					<plugin>
						<groupId>io.fabric8</groupId>
						<artifactId>docker-maven-plugin</artifactId>
						<extensions>true</extensions>
						<version>0.22.1</version>
						<configuration>
							<logDate>default</logDate>
							<verbose>true</verbose>
							<useColor>true</useColor>
							<images>
								<image>
									<alias>postgres-perl</alias>
									<name>bayceer/postgres-perl:9.4</name>
									<build>
										<from>postgres:9.4</from>
										<runCmds>
											<runCmd>apt-get update &amp;&amp; apt-get install -y postgresql-plperl-9.4 libpq-dev libmath-spline-perl</runCmd>
										</runCmds>
									</build>
								</image>
								<image>
									<alias>db</alias>
									<name>bayceer/bayeos-gateway-db:${project.version}</name>
									<build>
										<from>bayceer/postgres-perl:9.4</from>
										
										<runCmds>
											<runCmd>localedef -i de_DE -c -f UTF-8 -A /usr/share/locale/locale.alias de_DE.UTF-8</runCmd>
											<runCmd>echo "host all all 0.0.0.0/0 md5" >> /var/lib/postgresql/data/pg_hba.conf</runCmd>
										</runCmds>
										<env>
											<POSTGRES_USER>${db.user}</POSTGRES_USER>
											<POSTGRES_PASSWORD>${db.password}</POSTGRES_PASSWORD>
											<POSTGRES_INITDB_ARGS>--locale de_DE.UTF-8</POSTGRES_INITDB_ARGS>
										</env>
										<assembly>
											<targetDir>/docker-entrypoint-initdb.d</targetDir>
											<inline>
												<fileSets>
													<fileSet>
														<directory>${project.basedir}/target/deb/data/usr/share/bayeos-gateway/sql</directory>
														<outputDirectory>.</outputDirectory>
													</fileSet>
												</fileSets>
											</inline>
										</assembly>
										<tags>
											<tag>latest</tag>
											<tag>${project.version}</tag>
										</tags>
									</build>
									<run>										
										<wait>
											<log>PostgreSQL init process complete; ready for start up.</log>
											<time>60000</time>
										</wait>
										<log>
											<prefix>DB:</prefix>
											<color>blue</color>
										</log>
									</run>
								</image>

								<image>
									<alias>bayeos-gateway</alias>
									<name>bayceer/bayeos-gateway:${project.version}</name>
									<build>
										<from>java:8</from>
										<env>
											<EXPORT_HOST>bayeos-server</EXPORT_HOST>
										</env>
										<assembly>
											<descriptorRef>artifact</descriptorRef>
										</assembly>
										<cmd>
											<shell>java -jar /maven/bayeos-gateway.jar</shell>
										</cmd>
										<tags>
											<tag>latest</tag>
											<tag>${project.version}</tag>
										</tags>
									</build>
									<run>

										<labels>
											<environment>development</environment>
											<version>${project.version}</version>
										</labels>
										<ports>
											<port>${server.port}:${server.port}</port>
										</ports>									
										<wait>
											<http>
												<url>http://${docker.hostname}:${server.port}${server.contextPath}</url>
											</http>
											<time>60000</time>
										</wait>

										<links>
											<link>db:db</link>
										</links>
										<log>
											<prefix>SERVER:</prefix>
											<color>cyan</color>
										</log>
									</run>
								</image>

							</images>
						</configuration>
						<executions>
							<execution>
								<id>start</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>build</goal>
									<goal>start</goal>
								</goals>
							</execution>
							<execution>
								<id>stop</id>
								<phase>post-integration-test</phase>
								<goals>
									<goal>stop</goal>
								</goals>
							</execution>
						</executions>
					</plugin>



				</plugins>
			</build>
		</profile>

	</profiles>


	<build>
		<finalName>bayeos-gateway</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>**/*.properties</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>src/deb</directory>
				<filtering>true</filtering>
				<excludes>
					<exclude>**/*.jar</exclude>
					<exclude>**/*.sql</exclude>
				</excludes>
				<targetPath>${project.build.directory}/deb</targetPath>
			</resource>
			<resource>
				<directory>src/deb</directory>
				<filtering>false</filtering>
				<includes>
					<include>**/*.jar</include>
					<include>**/*.sql</include>
				</includes>
				<targetPath>${project.build.directory}/deb</targetPath>
			</resource>

		</resources>
		<plugins>

			<plugin>
				<!-- Filtering of user defined variables in resources folders -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<useDefaultDelimiters>true</useDefaultDelimiters>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<executable>true</executable>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<compilerId>groovy-eclipse-compiler</compilerId>
					<version>3.1</version>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.codehaus.groovy</groupId>
						<artifactId>groovy-eclipse-compiler</artifactId>
						<version>2.9.1-01</version>
					</dependency>
					<dependency>
						<groupId>org.codehaus.groovy</groupId>
						<artifactId>groovy-eclipse-batch</artifactId>
						<version>2.3.7-01</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>



		<pluginManagement>
			<plugins>
				<!-- This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-compiler-plugin
										</artifactId>
										<versionRange>
											[3.1,)
										</versionRange>
										<goals>
											<goal>compile</goal>
											<goal>testCompile</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

